{
  "name": "BOB",
  "description": "Encrypted on-chain instant messenger",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev",
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "build": "npm run build:tailwind && sapper build",
    "export": "npm run build:tailwind && sapper export",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "deploy": "npm run export && push-dir --dir=__sapper__/export --branch=gh-pages --cleanup"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "next",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "datapay": "0.0.22",
    "fa-svelte": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "planter": "^0.4.0",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "postcss-url": "^8.0.0",
    "push-dir": "^0.4.1",
    "sapper": "^0.27.0",
    "svelte": "^3.0.0",
    "svelte-infinite-scroll": "^1.2.0",
    "svelte-loader": "^2.9.0",
    "svelte-preprocess": "^3.7.1",
    "tailwindcss": "^1.2.0",
    "webpack": "^4.7.0"
  }
}
